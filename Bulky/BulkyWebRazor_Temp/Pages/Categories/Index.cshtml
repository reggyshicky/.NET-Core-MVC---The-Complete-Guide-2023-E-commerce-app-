@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h3 class="text-success">
                    Category List
                </h3>
            </div>
            <div class="col-6 text-end">
                <a asp-page="/categories/create" class="btn btn-success">
                <i class="bi bi-plus-square"></i> Create New Category
                </a>
            </div>
        </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @* model is the complete indexModel, inside we have category list and that is accessed below *@
        @foreach(var obj in Model.CategoryList.OrderBy(o=>o.DisplayOrder)) 
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>
                            <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
